<div id="showContainerTrans">
    <h3> <%= @insult.phrase %> </h3>
    <h4> Contributed by:<strong> <%= @insult.contributor %> </strong> </h4>

    <%= link_to 'Delete', @insult, method: :delete, data: { confirm: 'Are you sure you want to delete this insult?' } %>
    <%= link_to 'Edit', "/insults/#{@insult.id}/edit" %>
    <a href="/insults" id="newEditViewBackButton" onClick="showFadeOut()">Go Back</a>
</div>


<script>
  function showFadeOut() {
    document.getElementById('showContainerOpaque').setAttribute('id', 'showContainerTrans');
  }
</script>

<!-- Javascripts -->

<%= javascript_include_tag('showFadeIn.js') %>

